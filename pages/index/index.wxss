.pull-left {
  float: left;
}

.pull-right {
  float: right;
}

.table-view {
  height: 100%;
}

.table-view-item {
  padding: 10px;
  background-image: url("data:image/svg+xml;charset=utf-8,<svg xmlns='http://www.w3.org/2000/svg' width='100%' height='1'><rect fill='#c8c7cc' x='0' y='0' width='100%' height='0.5'/></svg>");
  background-repeat: no-repeat;
  background-position: 15px 100%;
  border-bottom: 0;
}

.media-object.thumbnail {
  width: 56px;
  height: 80px;
  padding-right: 5px;
}

.media-object.element {
  width: 80px;
  height: 80px;
  padding-top: 5px;
}

.media-body {
  font-size: 14px;
}

.media-body .media-title {
  color: #555;
  font-weight: 900;
  line-height: 18px;

  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.media-body .media-title .small {
  padding-left: 2px;
  padding-right: 2px;
  font-size: 80%;
}

.media-body .media-info-group {
  position: relative;
  display: table;
}

.media-body .media-info-group .media-info {
  display: table-cell;
  width: 1%;
}

.media-body .media-info {
  color: #555;
  font-size: 14px;
  line-height: 15px;
}

.scroll-to-top {
  position: fixed;
  bottom: 20px;
  right: 20px;
  opacity: 0;
  z-index: 10;
  border: none;
  transition: transform .25s, opacity 1ms .25s;
  transform: translate3d(300%, 0, 0);
  line-height: 1;
  padding: 9px 12px 10px;
  font-size: 18px;
}

.scroll-to-top.in {
  opacity: 0.7;
  transition: transform .25s;
  transform: translate3d(0, 0, 0);
}

.scroll-to-top:after {
  border: none;
}

.modal .icon-close {
  color: #fff;
  padding: 10px;
  position: absolute;
  right: 0;
  z-index: 1;
  font-size: 24px;
}

.modal .image {
  width: 100%;
  height: 100%;
}

.modal .media-title {
  font-size: 16px;
}

.modal .media-body .media-title {
  color: #fff;
}

.modal .media-content {
  padding: 10px 15px 0;
}

.modal .media-title {
  padding-top: 20px;
}

.modal .media-info-group, .modal .media-info-title, .modal .media-info {
  color: #fff;
  text-shadow: 0 0 5px #000;
}

.modal .media-footer {
  padding-bottom: 60px;
}

.modal .contact {
  position: absolute;
  left: 15px;
  bottom: 30px;
  font-size: 14px;
}

.swiper-pagination {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 10px;
  text-align: center;
  transition: 300ms;
  transform: translate3d(0,0,0);
  z-index: 10;
}

.swiper-pagination .swiper-pagination-bullet {
  margin: 0 5px;
  width: 8px;
  height: 8px;
  display: inline-block;
  border-radius: 100%;
  background: #fff;
  opacity: 0.2;
}
.swiper-pagination .swiper-pagination-bullet.active {
  background: #fff;
  opacity: 0.7;
}
